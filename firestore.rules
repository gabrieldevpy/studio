rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/update their own user document.
    // Admins can read any user document.
    match /users/{userId} {
      allow read: if request.auth.uid == userId 
                    || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true);
      allow update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Routes can only be accessed by their owner.
    // Admins can read any route.
    match /routes/{routeId} {
      allow read: if request.auth.uid == resource.data.userId 
                    || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true);
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    // Logs can only be accessed by their owner.
    // Admins can read any log.
    // The cloak function can create logs without auth.
    match /logs/{logId} {
      allow read: if request.auth.uid == resource.data.userId
                    || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true);
      allow create: if request.auth == null || request.auth.uid == request.resource.data.userId;
    }
  }
}
